@{
    ViewData["Title"] = "Advices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .advice-container {
        display: flex; 
        background-color: #f9f9f9; 
        border: 1px solid #ccc; 
        border-radius: 8px; 
        padding: 30px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    .advice-text {
        flex: 1; 
        color: #444; 
        font-size: 18px; 
        line-height: 1.6; 
        margin-right: 20px;
    }

    .advice-image {
        display: flex; 
        flex-direction: column; 
        justify-content: space-between;
        align-items: center; /
        margin-left: 20px; 
    }

        .advice-image img {
            max-width: 500px; 
            max-height: 500px;
            object-fit: cover;
            border-radius: 8px; 
            margin-bottom: 20px; 
        }

    .btn-advice {
        display: inline-block; 
        padding: 10px 20px; 
        background-color: brown; 
        color: #fff; 
        border: none; 
        border-radius: 5px; 
        text-decoration: none; 
        font-size: 16px; 
        cursor: pointer; 
        transition: background-color 0.3s ease; 
    }

        .btn-advice:hover {
            background-color: brown;
        }
</style>

<br />
<center> <h1 class="text-gradient fw-bold">Advices</h1></center>
<br />
<div class="advice-container">
    <div class="advice-text">
        @Html.Raw(ViewBag.AdviceText)
        <br /><br /><br />
        <a href="#" class=" btn btn-gradient fs-8 d-inline-flex">Get More Advice</a>
    </div>
    <br /><br />
    <div class="advice-image">
        <img src="https://th.bing.com/th/id/OIP.Vx1XR8qDBtqa9H9UP56ymgHaE2?rs=1&pid=ImgDetMain" alt="Image Description">
        <img src="https://www.diasporaction.fr/wp-content/uploads/2022/12/Lutte-contre-le-changement-climatique-un-sacerdoce-pour-le-continent-africain-.jpg" alt="Image Description">
        <img src="https://www.biopianeta.it/wp-content/uploads/2019/01/somalia.jpg" alt="Image Description">
    </div>
</div>