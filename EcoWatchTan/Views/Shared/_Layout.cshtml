<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoWatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoWatch.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-VG5p4hQ/2uKt2m1S0AAj/UJoO7y2rjCfRKfP8GvlO9Gld+Od8fWdWwk5wXo+CN8zjY5FYwe9T7YYCZAYGSDlRg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

    <header>
<nav class="navbar navbar-expand-lg py-1" id="navbar-top" data-navbar-soft-on-scroll="data-navbar-soft-on-scroll">
            <div class="container">
                <div class="d-flex align-items-center flex-grow-1">
                    <a class="navbar-brand me-auto cursor-pointer" href="">
                        <img class="img-fluid" src="~/img/logos/logo1.png" alt="Logo" width="500" height="500">
                    </a>
                </div>
                            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent" data-navbar-collapse="data-navbar-collapse">

                                <ul class="navbar-nav mt-2 mt-lg-1 ms-lg-4 ms-xl-8 ms-2xl-9 gap-lg-x1" data-navbar-nav="data-navbar-nav">
                                    <li class="nav-item"> <a class="nav-link nav-bar-item px-0" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li class="nav-item"> <a class="nav-link nav-bar-item px-0" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                    <li class="nav-item"> <a class="nav-link nav-bar-item px-0" asp-area="" asp-controller="WeatherData" asp-action="Index">Drought Map</a></li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link nav-bar-item px-0" asp-area="" asp-controller="ApiData" asp-action="Index">Weather</a>
                                        </li>

                                    }
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link nav-bar-item px-0" asp-area="" asp-controller="Advices" asp-action="Index">Advices </a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
            <partial name="_LoginPartial" />

        </nav>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="Footer" style="background-image: url('/img/illustrations/BOTTOM.png');">
        <div class="pb-x1 px-3 px-lg-0">
            <div class="container">
                <div class="row align-items-end g-4 g-sm-6">
                    <div class="col-6 col-md-4">
                        <div>
                            <div class="mb-2"> <a class="links" asp-area="" asp-controller="Home" asp-action="Index">home</a></div>
                            <div class="mb-2"> <a class="links" asp-area="" asp-controller="ApiData" asp-action="Index">Weather</a></div>
                            <div class="mb-2"> <a class="links" asp-area="" asp-controller="Home" asp-action="Index">reviews</a></div>
                            <div class="mb-2"><a class="links" href="#review"> Privacy </a>
                            </div><a class="links" href="#support"> contact us</a> </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="mb-3 mb-md-5">
                            <h3 class="fs-9 fs-md-8 fw-bold mb-0" style="color: #FFF0D3;">User Account</h3>
                        </div>
                        <div>
                            <div class="mb-2"> <a class="links" href="#!">sign up</a></div>
                            <div class="mb-2"> <a class="links" href="#!">log in </a></div>
                            <div class="mb-2"> <a class="links" href="#!">edit profile</a></div>
                            <div class="mb-2">
                                <a class="links" href="#!">
                                    notifications
                                </a>
                            </div><a class="links" href="#!">
                                refund
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="row g-4 g-sm-6 g-md-0">
                            <div class="col-6 col-md-12 mb-md-7">
                                <h3 class="fs-9 fs-md-8 fw-bold mb-3" style="color: #FFF0D3;">Follow Us At</h3>
                                <div class="d-flex align-items-center"> <a class="social-icon me-2" href="#!"><span class="uil uil-facebook fs-8"></span></a><a class="social-icon me-2" href="#!"><span class="uil uil-linkedin fs-8"></span></a><a class="social-icon me-2" href="#!"><span class="uil uil-youtube fs-8"></span></a><a class="social-icon" href="#!"><span class="uil uil-twitter fs-8"></span></a></div>
                            </div>
                            <div class="col-6 col-md-12">
                                <div class="mb-3">
                                    <p class="fs-9 fs-md-8 fw-bold lh-nomal mb-0" style="color: #FFF0D3;"> Contact </p>
                                </div>
                                <div class="fs-10 fs-md-9">
                                    <p class="mb-0 text-white opacity-70"> Obito Uchiha</p>
                                    <p class="mb-0 text-white opacity-70"> EMSI, Tangier</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-success py-2 py-md-3 position-relative terms-condition">
            <div class="overley-background"></div>
            <div class="container py-12 text-div text-md-end"><a class="links ms-md-4" href="#!" title="F.A.Q"> F.A.Q </a><a class="links ms-3 ms-md-4" href="#!" title="Cookies Policy"> Cookies Policy</a><a class="links ms-3 ms-md-4" href="#!" title="Legal Terms"> Legal Terms </a><a class="links ms-3 ms-md-4" href="#!" title="Privacy Policy"> Privacy Policy</a></div>
        </div>
    </footer>



    <script src="~/js/theme.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
